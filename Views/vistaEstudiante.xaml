<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ksalazarS6Online.Views.vistaEstudiante"
             Title="vistaEstudiante">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="SEMANA 6: SERVICIOS WEB"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               FontSize="20" />

        <!-- ðŸ”¹ Encabezado -->
        <Border Stroke="Black" StrokeThickness="1" BackgroundColor="#E0E0E0" Padding="5">
            <Grid ColumnDefinitions="*,*,*,*">

                <Label Text="CÃ³digo" FontAttributes="Bold" />
                <Label Text="Nombre" Grid.Column="1" FontAttributes="Bold" />
                <Label Text="Apellido" Grid.Column="2" FontAttributes="Bold" />
                <Label Text="Edad" Grid.Column="3" FontAttributes="Bold" />

            </Grid>
        </Border>

        <!-- ðŸ”¹ ListView con filas tipo tabla -->
        <ListView x:Name="listaEstudiantes"
                  HasUnevenRows="True"
                  ItemSelected="listaEstudiantes_ItemSelected"
                  SeparatorVisibility="None">

            <ListView.ItemTemplate>
                <DataTemplate>

                    <ViewCell>
                        <Border Stroke="Black" StrokeThickness="0.5">
                            <Grid ColumnDefinitions="*,*,*,*" Padding="5">

                                <Label Text="{Binding codigo}" />
                                <Label Grid.Column="1" Text="{Binding nombre}" />
                                <Label Grid.Column="2" Text="{Binding apellido}" />
                                <Label Grid.Column="3" Text="{Binding edad}" />

                            </Grid>
                        </Border>
                    </ViewCell>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <!-- ðŸ”¹ BotÃ³n para agregar estudiante -->
        <Button Text="Agregar Estudiante"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                Clicked="btnAgregar_Clicked"/>

    </VerticalStackLayout>

</ContentPage>
