<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ksalazarS6Online.Views.vistaActualizarEliminar"
             Title="vistaActualizarEliminar">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="ATUALIZAR -- ELMINAR"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="txtCodigo"
               IsEnabled="False"/>

        <Entry x:Name="txtNombre"
               Placeholder="Actualizar el nombre"/>
        <Entry x:Name="txtApellido"
               Placeholder="Actulice el Apellido"/>
        <Entry x:Name="txtEdad"
               Placeholder="Actualice la Edad"/>

        <Button x:Name="btnActualizar"
                Text="Actualizar"
                Clicked="btnActualizar_Clicked"/>
        <Button x:Name="btnEliminar"
                Text="Eliminar"
                Clicked="btnEliminar_Clicked"/> 
        
    </VerticalStackLayout>
</ContentPage>